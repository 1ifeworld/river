{
  "extends": ["../../biome.json"],
  "files": {
    "ignore": ["./gql/sdk.generated.ts"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off"
      },
      "suspicious": {
        "noRedeclare": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "noExtraBooleanCast": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noChildrenProp": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  }
}
